<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head") %>
        <link rel="stylesheet" href="/css/products.css" type="text/css" />
    </head>

    <body>
        <%- include("./partials/header") %>
        <main class="container-content-login">
            <form
                action="/collections/<%= product.id %>?_method=PUT"
                method="POST"
                class="create-form"
                enctype="multipart/form-data"
            >
                <div class="control-form name">
                    <input
                        type="text"
                        name="name"
                        placeholder="Nombre Del Producto"
                        class="control"
                        value="<%= product.name %> "
                    />
                    <% if(locals.errors && errors.name){ %>
                    <p style="color: red"><%= errors.name.msg %></p>
                    <% } %>
                </div>
                <div class="control-form image">
                    <label>Imágen del producto</label>
                    <input type="file" name="image" multiple class="control" />
                </div>
                <div class="control-form type">
                    <label for="">Tipo de lentes:</label>
                    <div class="flex-justify">
                        <input type="radio" name="type" value="Sunglasses" <%=
                        product.type=="Sunglasses" ? check="checked" : "" %> />
                        <label for="type1">Sunglasses</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="type" value="Eyeglasses" <%=
                        product.type=="Eyeglasses" ? check="checked" : "" %> />
                        <label for="type1">Eyeglasses</label>
                    </div>
                </div>
                <div class="control-form gender">
                    <label for="">Genero:</label>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="M" <%=
                        (product.gender=="M") ? check="checked" : "" %>/>
                        <label>Masculino</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="F" <%=
                        (product.gender=="F") ? check="checked" : "" %>/>
                        <label>Femenino</label>
                    </div>
                    <div class="flex-justify">
                        <input type="radio" name="gender" value="U" <%=
                        (product.gender=="U") ? check="checked" : "" %>/>
                        <label>Unisex</label>
                    </div>
                </div>
                <div class="control-form brand">
                    <input
                        type="text"
                        name="brand"
                        placeholder="Marca Del Producto"
                        class="control"
                        value="<%= product.brand %> "
                    />
                    <% if(locals.errors && errors.name){ %>
                    <p style="color: red"><%= errors.name.msg %></p>
                    <% } %>
                </div>
                <div class="control-form colorBorderCheckboxes">
                    <label for="">Colores del marco:</label>
                    <div class="colorCheckboxes">
                        <% for(columnName in columnNamesBorder){ %>
                        <div class="inputColorBoxes">
                            <input type="checkbox"
                            name="<%=columnNamesBorder[columnName] %>" value="0"
                            <%=
                            (product.ProductBorderColor[columnNamesBorder[columnName]]
                            == 1) ? check="checked" : "" %> />
                            <label for="" class="plr"
                                ><%=columnNamesBorder[columnName] %>
                            </label>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="control-form colorGlassesCheckboxes">
                    <label for="">Colores del marco:</label>
                    <div class="colorCheckboxes">
                        <% for(columnName in columnNamesGlass){ %>
                        <div class="inputColorBoxes">
                            <input type="checkbox"
                            name="<%=columnNamesGlass[columnName] %>" value="0"
                            <%=
                            (product.ProductGlassColor[columnNamesGlass[columnName]]
                            == 1) ? check="checked" : "" %> />
                            <label for="" class="plr"
                                ><%=columnNamesGlass[columnName] %>
                            </label>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="control-form model">
                    <input
                        type="text"
                        name="model"
                        placeholder="Modelo"
                        class="control"
                        value="<%= product.model %> "
                    />
                    <% if (locals.errors && errors.model) { %>
                    <p style="color: red"><%= errors.model.msg %></p>
                    <% } %>
                </div>
                <div class="control-form priceVal">
                    <input
                        type="text"
                        name="price"
                        placeholder="Precio"
                        class="control"
                        value="<%= product.price %> "
                    />
                    <% if (locals.errors && errors.price) { %>
                    <p style="color: red"><%= errors.price.msg %></p>
                    <% } %>
                </div>
                <div class="control-form description">
                    <input
                        type="text"
                        name="description"
                        placeholder="Descripción del producto"
                        value="<%= product.description %> "
                        class="control"
                    />
                    <% if (locals.errors && errors.description) { %>
                    <p style="color: red"><%= errors.description.msg %></p>
                    <% } %>
                </div>

                <button type="submit" class="button-form">Publicar</button>
            </form>
        </main>
        <%- include("./partials/footer") %>
    </body>
    <script src="/js/productEditValidations.js"></script>
</html>
