<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="/css/products.css" type="text/css" />
        <link rel="stylesheet" href="/css/product-tablet.css" type="text/css" />

        <%- include("./partials/head") %>
    </head>
    <script src="/js/detailProd.js"></script>

    <body>
        <%- include("./partials/header") %>

        <main class="container">
            <hr />
            <p class="text-muted strong font-monospace">
                <a href="/" class="text-decoration-none text-reset">Home </a> >
                <a href="/collections" class="text-decoration-none text-reset"
                    >Shop
                </a>
                >
                <a
                    href="/search?search=<%= product.brand  %> "
                    class="text-decoration-none text-reset"
                    ><%= product.brand %>
                </a>
            </p>

            <div class="row py-3">
                <div class="pl-5 col-1 my-5 grid-images">
                    <div class="brand">
                        <img
                            src="<%= product.imageProducts.image1 %> "
                            class="d-block w-100"
                            id="img-small1"
                            alt="..."
                        />
                    </div>
                    <div class="brand">
                        <img
                            src="<%= product.imageProducts.image2 %> "
                            class="d-block w-100"
                            id="img-small2"
                            alt="..."
                        />
                    </div>
                    <div class="brand">
                        <img
                            src="<%= product.imageProducts.image3 %> "
                            class="d-block w-100"
                            id="img-small3"
                            alt="..."
                        />
                    </div>
                </div>
                <div class="col-6 grid-images">
                    <img
                        src="<%= product.imageProducts.image1 %> "
                        class="img-selected w-100"
                        id="img1"
                        alt="..."
                    />
                    <img
                        src="<%= product.imageProducts.image2 %> "
                        class="d-none w-100"
                        id="img2"
                        alt="..."
                    />
                    <img
                        src="<%= product.imageProducts.image3 %> "
                        class="d-none w-100"
                        id="img3"
                        alt="..."
                    />
                </div>
                <div class="col-4 bg-whitesmoke border">
                    <div class="border-0 card h-100 bg-whitesmoke py-2">
                        <div class="card-top">
                            <h6 class="text-muted text-shadow">
                                <%=product.brand %> - <%= product.type %>
                            </h6>
                            <h2 class="text-shadow"><%= product.name %></h2>
                            <p class="text-muted text-shadow">
                                <small>Item <%= product.id %> </small>
                            </p>
                            <div
                                class="d-flex justify-content-left small mb-2 text-shadow"
                            >
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <i class="fa fa-star" aria-hidden="true"></i>
                                <span
                                    class="px-2 ultra-small text-decoration-underline"
                                    >3 REVIEWS
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <h5 class="text-shadow pt-2 strong text-danger">
                                $<%= product.price %>
                            </h5>
                            <p class="text-muted text-shadow pt-2">Color:</p>
                            <div>
                                <% for(columnName in columnNamesBorder){ %> <%
                                if(product.ProductBorderColor[columnNamesBorder[columnName]]
                                == 1){ %>
                                <span
                                    class="circles"
                                    style="
                                        --bg: <%=columnNamesBorder[columnName]%>;
                                    "
                                ></span>
                                <% }} %>
                            </div>
                            <div class="d-flex pt-3 text-shadow">
                                <p class="text-muted">Gender:</p>
                                <p class="strong px-2">
                                    <%= product.gender === "M" ? "Masculino" :
                                    product.gender === "F" ? "Femenino" :
                                    "Unisex"%>
                                </p>
                            </div>
                            <p class="text-shadow description">
                                <%=product.description %>
                            </p>
                            <div class="text-shadow">
                                <button
                                    type="button"
                                    class="btn btn-primary w-100"
                                >
                                    <span class="button-text">ADD TO CART</span>
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-secondary w-100 mt-2"
                                >
                                    <span class="button-text"
                                        >ADD TO WISHLIST
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <section class="py-4">
                <h2>Related Products</h2>
                <div
                    id="carouselExampleDark"
                    class="w-100 carousel carousel-dark slide"
                    data-bs-ride="carousel"
                >
                    <div class="carousel-indicators">
                        <button
                            type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="0"
                            class="active btn-dark"
                            aria-current="true"
                            aria-label="Slide 1"
                        ></button>
                        <button
                            type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="1"
                            aria-label="Slide 2"
                        ></button>
                        <button
                            type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="2"
                            aria-label="Slide 3"
                        ></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row px-2">
                                <% for(let product of products.slice(0,4)){ %>
                                <div class="col-3 mb-5">
                                    <div class="card h-100">
                                        <img
                                            src="<%= product.imageProducts.image1 %>"
                                            class="card-img-top h-inherit"
                                        />
                                        <div class="card-body p-4">
                                            <div class="text-center">
                                                <h5 class="fw-bolder">
                                                    <%= product.name %>
                                                </h5>
                                                <div
                                                    class="d-flex justify-content-center small text-warning mb-2"
                                                >
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                </div>
                                                $ <%= product.price %>
                                            </div>
                                            <div
                                                class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                                            >
                                                <div class="text-center">
                                                    <a
                                                        class="btn btn-outline-dark mt-auto"
                                                        href="<%=`/collections/${product.id}` %>"
                                                        >View Details</a
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row px-2">
                                <% for(let product of products.slice(4,8)){ %>
                                <div class="col-3 mb-5">
                                    <div class="card h-100">
                                        <img
                                            src="<%= product.imageProducts.image1 %>"
                                            class="card-img-top h-inherit"
                                        />
                                        <div class="card-body p-4">
                                            <div class="text-center">
                                                <h5 class="fw-bolder">
                                                    <%= product.name %>
                                                </h5>
                                                <div
                                                    class="d-flex justify-content-center small text-warning mb-2"
                                                >
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                </div>
                                                $ <%= product.price %>
                                            </div>
                                            <div
                                                class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                                            >
                                                <div class="text-center">
                                                    <a
                                                        class="btn btn-outline-dark mt-auto"
                                                        href="<%=`/collections/${product.id}` %>"
                                                        >View Details</a
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row px-2">
                                <% for(let product of products.slice(8,12)){ %>
                                <div class="col-3 mb-5">
                                    <div class="card h-100">
                                        <img
                                            src="<%= product.imageProducts.image1 %>"
                                            class="card-img-top h-inherit"
                                        />
                                        <div class="card-body p-4">
                                            <div class="text-center">
                                                <h5 class="fw-bolder">
                                                    <%= product.name %>
                                                </h5>
                                                <div
                                                    class="d-flex justify-content-center small text-warning mb-2"
                                                >
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                    <i
                                                        class="fa fa-star"
                                                        aria-hidden="true"
                                                    ></i>
                                                </div>
                                                $ <%= product.price %>
                                            </div>
                                            <div
                                                class="card-footer p-4 pt-0 border-top-0 bg-transparent"
                                            >
                                                <div class="text-center">
                                                    <a
                                                        class="btn btn-outline-dark mt-auto"
                                                        href="<%=`/collections/${product.id}` %>"
                                                        >View Details</a
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <button
                        class="carousel-control-prev justify-content-start"
                        type="button"
                        data-bs-target="#carouselExampleDark"
                        data-bs-slide="prev"
                    >
                        <span
                            class="carousel-control-prev-icon"
                            aria-hidden="true"
                        ></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button
                        class="carousel-control-next justify-content-end"
                        type="button"
                        data-bs-target="#carouselExampleDark"
                        data-bs-slide="next"
                    >
                        <span
                            class="carousel-control-next-icon"
                            aria-hidden="true"
                        ></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>
        </main>
        <%- include("./partials/footer") %>
    </body>
</html>
