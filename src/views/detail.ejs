<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/css/products.css" type="text/css" />
  <link rel="stylesheet" href="/css/product-tablet.css" type="text/css" />
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <%- include("./partials/head") %>
  
</head>
<script src="/js/addToCart.js"></script>


<body>
  <%- include("./partials/header") %>

    <main class="prod-container">
      <article>
        <section class="main-product">

          <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="<%= product.imageProducts.image1 %> " class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= product.imageProducts.image2 %> " class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="<%= product.imageProducts.image3 %> " class="d-block w-100" alt="...">
              </div>
            </div>
          </div>
          <div class="product-button">
            <div class="product_id">
              <%= product.id %> 
            </div>
            <div class="product-description">

              <h1>
                <%= product.name %>
              </h1>
              <P class="price">
                $<%= product.price %>
              </P>
              <!-- <div class="star-description">
              <i class="far fa-star"></i> <i class="far fa-star"></i><i class="far fa-star"></i><i
                class="far fa-star"></i><i class="far fa-star"></i>
            </div> -->
              <P class="description">
                <%= product.description %>
              </P>

            </div>
            <button class="button-product addToCart" type="submit" name="comprar" >Agregar al carrito - $ <%= product.price
                %>
            </button>
            <% if(user != undefined && user.admin == 1){ %>
            <div>
              <a href="/collections/<%= product.id %>/edit " class="button-product-edit">Editar</a>
              <form action="/collections/<%= product.id %>?_method=DELETE " method="POST" style="display: inline-flex">
                <button type="submit" class="button-product-delete">ELIMINAR</button>
              </form>
            </div>
            <% } %> 
          </div>


      </article>

      </section>

      <%- include("./partials/carrousel-footer") %>
    </main>
    <%- include("./partials/footer") %>
</body>

</html>